<h1>All Wikis</h1>
<div>
<div class="col-md-4">
  <%= link_to "New Wiki", new_wiki_path, class: 'btn btn-success' %>
</div class ="wiki_titles pull-center">
<% @wikis.each do |wiki| %>
  <% if user_is_authorized_for_wikis(wiki) %>
    <div class="media">
      <div class="media-body">
        <h4 class="media-heading">
          <%= link_to markdown(wiki.title), wiki %>
        </h4>
        <small>
          <%= markdown(wiki.body) %>
        </small>  
      </div>
    </div>
  <% end %>
<% end %>
</div>

